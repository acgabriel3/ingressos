doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='description', content='Some description')
    meta(name='viewport', content='width=device-width, initial-scale=1')
  body
  include navheader.pug

  - const divStyle = { "display": "inline-block", "top": "0", "width": "300px", "margin": "0 auto", "font-family": "Tahoma, Geneva, sans-serif" }
  - const h1Style = { "text-align": "center", "color": "#4d4d4d", "font-size": "24px", "padding": "20px 0 20px 0", "margin-top": "-130px" }
  - const submitStyle = { "width": "100%", "padding": "15px"," background-color": "#535b63", "border": "0", "margin-bottom": "2px", "box-sizing": "border-box", "cursor": "pointer", "font-weight": "bold", "color": "#ffffff" } 
  - const imgContainer = { "display": "flex", "width": "200px", "height": "200px", "overflow": "hidden", "border-radius": "50%", "z-index": "1", "justify-content": "center" }
  - const submitDeleteStyle = { "width": "100%", "padding": "15px"," background-color": "#ff0800", "border": "0", "margin-bottom": "2px", "box-sizing": "border-box", "cursor": "pointer", "font-weight": "bold", "color": "#ffffff" } 
  - const imgStyle = { "width": "auto", "height": "100%"}

    div(style=divStyle)
      a(href="/usuarios/perfil/editar")
        input(type="submit" value="Editar Perfil" style=submitStyle)
      a(href="/usuarios/cartoes")
        input(type="submit" value="Visualizar Cartões de Crédito" style=submitStyle)
      form(action="/usuarios/perfil/excluir" method="post")
        input(type="submit" value="Apagar Conta" style=submitDeleteStyle)

    h1(style=h1Style) Seu perfil

    div(align='center')
      div(align='center' style=imgContainer)
        img(src=`data:image/jpeg;base64,${usuarioAtivo.foto}` style=imgStyle)
    
    p(align='center')
      b CPF: 
      var= usuarioAtivo.cpf
    p(align='center')
      b Nome: 
      var= usuarioAtivo.nome
    p(align='center')
      b E-mail: 
      var= usuarioAtivo.email
    p(align='center')
      b Senha: 
      var= usuarioAtivo.senha
    p(align='center')
      b Telefone: 
      var= usuarioAtivo.telefone
    p(align='center')
      b Data de nascimento: 
      var= usuarioAtivo.dt_nascimento
    p(align='center')
      b CEP: 
      var= usuarioAtivo.cep    
      b   Casa: 
      var= usuarioAtivo.numero_casa