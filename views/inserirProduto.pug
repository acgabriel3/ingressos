doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='description', content='Some description')
    meta(name='viewport', content='width=device-width, initial-scale=1')
  body(style="background-image:url('https://img.elo7.com.br/product/original/206462E/papel-de-parede-casual-azul-clarinho-papel-de-parede-areas-externas.jpg');")
    - const divStyle = { "width": "300px", "margin": "0 auto", "font-family": "Tahoma, Geneva, sans-serif" }
    - const h1Style = { "text-align": "center", "color": "#4d4d4d", "font-size": "24px", "padding": "20px 0 20px 0" }
    - const InputStyleBig = { "width": "100%", "padding": "15px", "border": "1px solid #dddddd", "margin-bottom": "15px", "box-sizing": "border-box"}
    - const InputStyleSmall = { "width": "50%", "padding": "15px", "border": "1px solid #dddddd", "margin-bottom": "15px", "box-sizing": "border-box"}
    - const submitStyle = { "width": "100%", "padding": "15px"," background-color": "#535b63", "border": "0", "margin-bottom": "2px", "box-sizing": "border-box", "cursor": "pointer", "font-weight": "bold", "color": "#ffffff" } 
    - const submitVoltarStyle = { "width": "100%", "padding": "15px"," background-color": "#f08080", "border": "0", "margin-bottom": "2px", "box-sizing": "border-box", "cursor": "pointer", "font-weight": "bold", "color": "#ffffff" } 
    div(style=divStyle)
      h1(style=h1Style)= "Preencha os Campos Abaixo"
      form(action="/produtos/inserir", method="post" enctype="multipart/form-data")
        input(type="text", name="nome"  placeholder="Nome" required style=InputStyleBig autocomplete="off")
        input(type="number", name="preco"  placeholder="Pre√ßo" required style=InputStyleBig autocomplete="off")
        h3= "Selecione uma categoria"
        each cat in categorias
          label= cat.nome
            input(type="checkbox" name="categoria" value=`${cat.codigo}`)
          br
        h3= "Selecione uma loja fornecedora"
        each loja in lojas
          label= loja.nome
            input(type="checkbox" name="loja" value=`${loja.nome}`) 
          br
        br
        input(type="number" name="quantidade" placeholder="Quantidade" required style=InputStyleBig)
        br
        input(type="file", name="foto"  placeholder="foto de perfil" accept="image/*" required style=InputStyleBig)
        input(type="submit", value="Cadastrar Produto" style=submitStyle)
      form(action="/produtos")
        input(type="submit" value="Voltar" style=submitVoltarStyle )